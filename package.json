{
  "name": "reasonml-starter-kit",
  "version": "1.0.0",
  "description": "ReasonML starter kit",
  "main": "index.js",
  "author": "Nicolas Goumard",
  "license": "MIT",
  "devDependencies": {
    "bs-platform": "^4.0.7",
    "bsb-js": "^1.1.7",
    "concurrently": "^4.0.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "parcel-bundler": "^1.10.3"
  },
  "dependencies": {
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "reason-react": "^0.5.3"
  },
  "scripts": {
    "build": "parcel build ./src/index.html --public-url /",
    "format": "refmt --in-place src/*.re",
    "start": "concurrently -c --kill-others 'npm:watch-html' 'npm:watch-reason'",
    "watch-html": "parcel ./src/index.html",
    "watch-reason": "bsb -make-world -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.re": [
      "yarn format",
      "git add"
    ]
  }
}
